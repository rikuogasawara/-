<% if @book.errors.any? %>
  <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container mt-3">
  <div class="row">
    <h1 class="col-10">Editing Book</h1>

    <div class="col-10">
    <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
      <label>Title</label>
      <%= f.text_field :title, class: "form-control" %>

      <label>Opinion</label>
      <%= f.text_area :body, class: "form-control" %>
      <%= f.submit "Update Book", class: "btn btn-success"%>
    <% end%>
    </div>
    <div class="col-10">
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>
